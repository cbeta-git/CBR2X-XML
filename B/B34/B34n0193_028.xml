<cb:mulu type="其他" level="1">提策篇</cb:mulu><cb:mulu type="其他" level="2">怨不可藏</cb:mulu>
<milestone unit="juan" n="28"/>
<pb ed="B" xml:id="B34.0193.0875a" n="0875a"/>
<lb ed="B" n="0875a01"/><cb:mulu type="卷" n="28"></cb:mulu>
<lb ed="B" n="0875a02"/>
<lb ed="B" n="0875a03"/>
<lb ed="B" n="0875a04"/>
<lb ed="B" n="0875a05"/>
<lb ed="B" n="0875a06"/>
<lb ed="B" n="0875a07"/>
