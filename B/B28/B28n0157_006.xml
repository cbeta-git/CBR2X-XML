<milestone unit="juan" n="6"/>
<pb ed="B" xml:id="B28.0157.0486b" n="0486b"/>
<lb ed="B" n="0486b01"/><cb:mulu type="卷" n="6"></cb:mulu><cb:div type="other"><cb:mulu type="其他" level="1">佛教初學課本</cb:mulu>
<lb ed="B" n="0486b02"/><p xml:id="pB28p0486b0201"><figure><graphic url="../figures/B/B28p0486_01.gif"></graphic></figure></p>
<lb ed="B" n="0486b03"/>
