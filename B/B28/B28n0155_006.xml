<text><body>
<cb:mulu type="其他" level="1">「辨學蒭言自敘」等</cb:mulu><cb:mulu type="其他" level="2">闢邪摘要畧議</cb:mulu>
<milestone unit="juan" n="6"/>
<pb ed="B" xml:id="B28.0155.0310a" n="0310a"/>
<lb ed="B" n="0310a01"/><cb:mulu type="卷" n="6"></cb:mulu>
<lb ed="B" n="0310a02"/>
<lb ed="B" n="0310a03"/>
<lb ed="B" n="0310a04"/>
<lb ed="B" n="0310a05"/>
<lb ed="B" n="0310a06"/>
<lb ed="B" n="0310a07"/>
<lb ed="B" n="0310a08"/>
