<lb ed="B" n="0557a01"/><cb:mulu type="卷" n="13"></cb:mulu><cb:div type="other"><cb:mulu type="其他" level="1">道德經發隱</cb:mulu>
<lb ed="B" n="0557a02"/><p xml:id="pB28p0557a0201"><figure><graphic url="../figures/B/B28p0557_01.gif"></graphic></figure></p>
<lb ed="B" n="0557a03"/>
<lb ed="B" n="0557a04"/>
<lb ed="B" n="0557a05"/>
<lb ed="B" n="0557a06"/>
<lb ed="B" n="0557a07"/>
<lb ed="B" n="0557a08"/>
