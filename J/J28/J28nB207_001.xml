<milestone n="1" unit="juan"/>
<pb n="0287a" ed="J" xml:id="J28.B207.0287a"/>
<lb n="0287a01" ed="J"/><cb:div type="other"><cb:mulu level="1" type="其他">像</cb:mulu><head>古瓶山牧道者小影</head>
<lb n="0287a02" ed="J"/><p xml:id="pJ28p0287a0201"><figure><graphic url="../figures/J/J28p0287_01.gif"></graphic></figure></p></cb:div>
<lb n="0287a03" ed="J"/>
<lb n="0287a04" ed="J"/>
<lb n="0287a05" ed="J"/>
<lb n="0287a06" ed="J"/>
<lb n="0287a07" ed="J"/>
<lb n="0287a08" ed="J"/>
