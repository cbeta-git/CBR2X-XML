<lb ed="X" n="0625a12"/><lb ed="R108" n="0618a11"/><list rend="no-marker"><item xml:id="itemX61p0625a1201">往生證驗</item><item xml:id="itemX61p0625a1205">往生持戒</item></list></item></list></cb:div>
