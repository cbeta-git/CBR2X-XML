<lb n="0823c12" ed="X"/><lb n="0605b12" ed="R129"/><list rend="no-marker"><item xml:id="itemX74p0823c1201">結界</item><item xml:id="itemX74p0823c1203">遣使</item><item xml:id="itemX74p0823c1205">建旛</item></list></item>
