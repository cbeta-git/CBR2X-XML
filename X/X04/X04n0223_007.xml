<lb n="0061a01" ed="X"/><lb n="0761b04" ed="R005"/><cb:div type="note"><entry style="margin-left:1em"><form>劈</form><cb:def><p xml:id="pX04p0061a0102" cb:place="inline"><note place="inline">普擊切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>熏</form><cb:def><p xml:id="pX04p0061a0106" cb:place="inline"><note place="inline">許云切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>轍</form><cb:def><p xml:id="pX04p0061a0110" cb:place="inline"><note place="inline">直列切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>牗</form><cb:def><p xml:id="pX04p0061a0114" cb:place="inline"><note place="inline">與久切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>驗</form><cb:def><p xml:id="pX04p0061a0118" cb:place="inline"><note place="inline">魚欠切。</note></p></cb:def></entry></cb:div></cb:div></cb:div></cb:div>
