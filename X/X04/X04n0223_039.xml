<pb ed="X" xml:id="X04.0223.0273a" n="0273a"/>
<lb ed="X" n="0273a01"/><lb ed="R006" n="0224a08"/><cb:juan fun="close" n="39"><cb:jhead>大方廣佛新華嚴經合論卷第三十九</cb:jhead></cb:juan>
<lb ed="X" n="0273a02"/><lb ed="R006" n="0224a09"/>
<lb ed="X" n="0273a03"/><lb ed="R006" n="0224a10"/><cb:div type="w"><head>音切</head>
<lb ed="X" n="0273a04"/><lb ed="R006" n="0224a11"/><cb:div type="note"><entry style="margin-left:1em"><form>諂</form><cb:def><p xml:id="pX04p0273a0402" cb:place="inline"><note place="inline">丑琰切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>誑</form><cb:def><p xml:id="pX04p0273a0406" cb:place="inline"><note place="inline">居況切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>姊</form><cb:def><p xml:id="pX04p0273a0410" cb:place="inline"><note place="inline">子音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>妹</form><cb:def><p xml:id="pX04p0273a0413" cb:place="inline"><note place="inline">昧音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>瞋</form><cb:def><p xml:id="pX04p0273a0416" cb:place="inline"><note place="inline">昌真切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>癡</form><cb:def><p xml:id="pX04p0273a0420" cb:place="inline"><note place="inline">丑之切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>皺</form><cb:def><p xml:id="pX04p0273a0424" cb:place="inline"><note place="inline">側救切。</note></p></cb:def></entry>
<lb ed="X" n="0273a05"/><lb ed="R006" n="0224a12"/><entry style="margin-left:1em"><form>嬰</form><cb:def><p xml:id="pX04p0273a0502" cb:place="inline"><note place="inline">於盈切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>焭</form><cb:def><p xml:id="pX04p0273a0506" cb:place="inline"><note place="inline">渠營切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>羸</form><cb:def><p xml:id="pX04p0273a0510" cb:place="inline"><note place="inline">力為切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>髓</form><cb:def><p xml:id="pX04p0273a0514" cb:place="inline"><note place="inline">息委切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>籌</form><cb:def><p xml:id="pX04p0273a0518" cb:place="inline"><note place="inline">直由切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>窶</form><cb:def><p xml:id="pX04p0273a0522" cb:place="inline"><note place="inline">其矩切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>迫</form>
<lb ed="X" n="0273a06"/><lb ed="R006" n="0224a13"/><cb:def><p xml:id="pX04p0273a0601"><note place="inline">百音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>贍</form><cb:def><p xml:id="pX04p0273a0604" cb:place="inline"><note place="inline">市艷切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>矜</form><cb:def><p xml:id="pX04p0273a0608" cb:place="inline"><note place="inline">居令切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>詣</form><cb:def><p xml:id="pX04p0273a0612" cb:place="inline"><note place="inline">魚計切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>役</form><cb:def><p xml:id="pX04p0273a0616" cb:place="inline"><note place="inline">亦音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>腦</form><cb:def><p xml:id="pX04p0273a0619" cb:place="inline"><note place="inline">奴老切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>肺</form><cb:def><p xml:id="pX04p0273a0623" cb:place="inline"><note place="inline">芳計切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>祜</form>
<lb ed="X" n="0273a07"/><lb ed="R006" n="0224a14"/><cb:def><p xml:id="pX04p0273a0701"><note place="inline">胡古切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>缺</form><cb:def><p xml:id="pX04p0273a0705" cb:place="inline"><note place="inline">苦穴切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>胞</form><cb:def><p xml:id="pX04p0273a0709" cb:place="inline"><note place="inline">包音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>胎</form><cb:def><p xml:id="pX04p0273a0712" cb:place="inline"><note place="inline">台音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>穢</form><cb:def><p xml:id="pX04p0273a0715" cb:place="inline"><note place="inline">於廢切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>嬈</form><cb:def><p xml:id="pX04p0273a0719" cb:place="inline"><note place="inline">乃鳥切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>遞</form><cb:def><p xml:id="pX04p0273a0723" cb:place="inline"><note place="inline">特計切。</note></p></cb:def></entry></cb:div></cb:div></cb:div>
