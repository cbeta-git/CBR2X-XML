<lb ed="X" n="0558b24"/><lb ed="R006" n="0794a17"/><cb:div type="note"><entry style="margin-left:1em"><form>欣</form><cb:def><p xml:id="pX04p0558b2402" cb:place="inline"><note place="inline">許巾切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>懼</form><cb:def><p xml:id="pX04p0558b2406" cb:place="inline"><note place="inline">其遇切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>擊</form><cb:def><p xml:id="pX04p0558b2410" cb:place="inline"><note place="inline">古歷切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>測</form><cb:def><p xml:id="pX04p0558b2414" cb:place="inline"><note place="inline">楚力切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>度</form><cb:def><p xml:id="pX04p0558b2418" cb:place="inline"><note place="inline">唐各切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>劑</form><cb:def><p xml:id="pX04p0558b2422" cb:place="inline"><note place="inline">在細切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>諂</form>
<pb ed="X" xml:id="X04.0223.0558c" n="0558c"/>
