<lb ed="X" n="0073a03"/><lb ed="R005" n="0785b02"/><cb:div type="note"><entry style="margin-left:1em"><form>闚</form><cb:def><p xml:id="pX04p0073a0302" cb:place="inline"><note place="inline">去隨切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>數</form><cb:def><p xml:id="pX04p0073a0306" cb:place="inline"><note place="inline">所角切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>僻</form><cb:def><p xml:id="pX04p0073a0310" cb:place="inline"><note place="inline">普擊切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>虧</form><cb:def><p xml:id="pX04p0073a0314" cb:place="inline"><note place="inline">去危切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>模</form><cb:def><p xml:id="pX04p0073a0318" cb:place="inline"><note place="inline">莫胡切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>稼</form><cb:def><p xml:id="pX04p0073a0322" cb:place="inline"><note place="inline">古訝切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>匿</form>
<lb ed="X" n="0073a04"/><lb ed="R005" n="0785b03"/><cb:def><p xml:id="pX04p0073a0401"><note place="inline">女力切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>擯</form><cb:def><p xml:id="pX04p0073a0405" cb:place="inline"><note place="inline">必刃切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>輭</form><cb:def><p xml:id="pX04p0073a0409" cb:place="inline"><note place="inline">而兗切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>崖</form><cb:def><p xml:id="pX04p0073a0413" cb:place="inline"><note place="inline">擬皆切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>崩</form><cb:def><p xml:id="pX04p0073a0417" cb:place="inline"><note place="inline">北滕切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>敵</form><cb:def><p xml:id="pX04p0073a0421" cb:place="inline"><note place="inline">田的切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>戮</form><cb:def><p xml:id="pX04p0073a0425" cb:place="inline"><note place="inline">力竹
<lb ed="X" n="0073a05"/><lb ed="R005" n="0785b04"/>切。</note></p></cb:def></entry></cb:div></cb:div>
