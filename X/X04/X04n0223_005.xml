<lb n="0046c24" ed="X"/><lb n="0733b06" ed="R005"/><cb:div type="note"><entry style="margin-left:1em"><form>映</form><cb:def><p xml:id="pX04p0046c2402" cb:place="inline"><note place="inline">於敬切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>怯</form><cb:def><p xml:id="pX04p0046c2406" cb:place="inline"><note place="inline">去劫切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>恡</form><cb:def><p xml:id="pX04p0046c2410" cb:place="inline"><note place="inline">良刃切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>斟</form><cb:def><p xml:id="pX04p0046c2414" cb:place="inline"><note place="inline">職深切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>酌</form><cb:def><p xml:id="pX04p0046c2418" cb:place="inline"><note place="inline">之若切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>倣</form><cb:def><p xml:id="pX04p0046c2422" cb:place="inline"><note place="inline">分兩切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>遺</form>
<pb n="0047a" ed="X" xml:id="X04.0223.0047a"/>
<lb n="0047a01" ed="X"/><lb n="0733b07" ed="R005"/><cb:def><p xml:id="pX04p0047a0101"><note place="inline">以規切。</note></p></cb:def></entry></cb:div></cb:div>
