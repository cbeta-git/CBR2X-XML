<lb ed="X" n="0648b24"/><lb ed="R007" n="0013b07"/><cb:div type="note"><entry style="margin-left:1em"><form>翮</form><cb:def><p xml:id="pX04p0648b2402" cb:place="inline"><note place="inline">行革切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>憩</form><cb:def><p xml:id="pX04p0648b2406" cb:place="inline"><note place="inline">去例切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>纖</form><cb:def><p xml:id="pX04p0648b2410" cb:place="inline"><note place="inline">息亷切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>瞬</form><cb:def><p xml:id="pX04p0648b2414" cb:place="inline"><note place="inline">舜音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>牖</form><cb:def><p xml:id="pX04p0648b2417" cb:place="inline"><note place="inline">與久切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>矚</form><cb:def><p xml:id="pX04p0648b2421" cb:place="inline"><note place="inline">之欲切。</note></p></cb:def></entry></cb:div></cb:div>
