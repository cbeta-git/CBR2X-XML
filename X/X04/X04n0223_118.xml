<lb ed="X" n="0777c23"/><lb ed="R007" n="0272a04"/><cb:div type="note"><entry style="margin-left:1em"><form>竄</form><cb:def><p xml:id="pX04p0777c2302" cb:place="inline"><note place="inline">七亂切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>銛</form><cb:def><p xml:id="pX04p0777c2306" cb:place="inline"><note place="inline">息亷切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>鼠</form><cb:def><p xml:id="pX04p0777c2310" cb:place="inline"><note place="inline">暑音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>猫</form><cb:def><p xml:id="pX04p0777c2313" cb:place="inline"><note place="inline">苗音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>狸</form><cb:def><p xml:id="pX04p0777c2316" cb:place="inline"><note place="inline">力之切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>磁</form><cb:def><p xml:id="pX04p0777c2320" cb:place="inline"><note place="inline">慈音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>吸</form><cb:def><p xml:id="pX04p0777c2323" cb:place="inline"><note place="inline">虗級切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>噬</form>
