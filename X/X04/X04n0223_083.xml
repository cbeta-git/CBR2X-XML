<lb ed="X" n="0564a24"/><lb ed="R006" n="0805b07"/><cb:div type="note"><entry style="margin-left:1em"><form>罵</form><cb:def><p xml:id="pX04p0564a2402" cb:place="inline"><note place="inline">莫駕切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>打</form><cb:def><p xml:id="pX04p0564a2406" cb:place="inline"><note place="inline">頂音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>棒</form><cb:def><p xml:id="pX04p0564a2409" cb:place="inline"><note place="inline">步項切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>屠</form><cb:def><p xml:id="pX04p0564a2413" cb:place="inline"><note place="inline">徒音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>訾</form><cb:def><p xml:id="pX04p0564a2416" cb:place="inline"><note place="inline">子音。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>撾</form><cb:def><p xml:id="pX04p0564a2419" cb:place="inline"><note place="inline">陟瓜切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>撻</form><cb:def><p xml:id="pX04p0564a2423" cb:place="inline"><note place="inline">他達切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>挑</form>
