<lb n="0366a02" ed="X"/><lb n="0410a04" ed="R006"/><cb:div type="note"><entry style="margin-left:1em"><form>鬘</form><cb:def><p xml:id="pX04p0366a0202" cb:place="inline"><note place="inline">莫班切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>蘊</form><cb:def><p xml:id="pX04p0366a0206" cb:place="inline"><note place="inline">於粉切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>裳</form><cb:def><p xml:id="pX04p0366a0210" cb:place="inline"><note place="inline">市羊切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>隘</form><cb:def><p xml:id="pX04p0366a0214" cb:place="inline"><note place="inline">於介切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>暨</form><cb:def><p xml:id="pX04p0366a0218" cb:place="inline"><note place="inline">居義切。</note></p></cb:def></entry><entry cb:place="inline" style="margin-left:1em"><form>瞿</form><cb:def><p xml:id="pX04p0366a0222" cb:place="inline"><note place="inline">求于切。</note></p></cb:def></entry></cb:div></cb:div>
